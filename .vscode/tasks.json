{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run day",
            "type": "process",
            "command": "cabal",
            "args": [
                "run",
                "day-${input:RunDay}",
                "--",
                "${input:Part}",
                "./inputs/day-${input:RunDay}.${input:InputFile}"
            ],
            "group": "none",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "RunDay",
            "type": "promptString",
            "description": "which day you want to run?",
        },
        {
            "id": "Part",
            "type": "pickString",
            "options": ["1","2"],
            "description": "which part do you want to run?"
        },
        {
            "id": "InputFile",
            "type": "pickString",
            "options": ["example","input"],
            "description": "which input file do you want?"
        }
    ]
}